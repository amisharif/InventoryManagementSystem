@using BusinessLogicLayer.ServiceContracts.DTO
@using PresentationLayer.ViewModels
@{
    ViewBag.Title = "Category";
}
@model CategoryViewModel


<form method="post" asp-controller="Category" asp-action="Edit">

    <div class="row panel-container">
        <div class="col-md-5">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong>
                        <span class="glyphicon glyphicon-th"></span>
                        <span>Update a Category</span>
                    </strong>
                </div>
                <form>
                    <div class="panel-body">
                        <div class="form-group">
                            <input type="hidden" asp-for="categoryUpdateRequest.ID" />
                            <input type="text" asp-for="categoryUpdateRequest.CategoryName" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary mt-2">Update</button>
                    </div>
                </form>

            </div>
        </div>

        <div class="col-md-7">

            @await Html.PartialAsync("_CategoryTable");

        </div>
    </div>

</form>